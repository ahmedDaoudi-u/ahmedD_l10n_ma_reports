<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_employee_data_conge_type" model="ir.ui.view">
        <field name="name">hr.employee</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='mobile_phone']" position="after">
                <field name="droit"/>
            </xpath>

            <xpath expr="//field[@name='droit']" position="after">
                <field name="reliquat"/>
            </xpath>

            <xpath expr="//field[@name='reliquat']" position="after">
                <field name="pris"/>
            </xpath>

            <xpath expr="//field[@name='pris']" position="after">
                <field name="solde"/>
            </xpath>

        </field>
    </record>
</odoo>